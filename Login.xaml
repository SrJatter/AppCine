<Window x:Class="AppCine.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCine"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" Background="DarkSlateGray">
    <Grid>
        <Label Content="WELCOME TO LOGIN PAGE" FontSize="22" Foreground="White" HorizontalAlignment="Center" Margin="0,74,0,-31"></Label>
        <Label x:Name="UsernameLabel" Content="Username" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="250,0,0,0" VerticalAlignment="Center"/>
        <Label x:Name="PasswordLabel" Content="Password" FontSize="18" Foreground="White" HorizontalAlignment="Left" Margin="256,253,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Username" HorizontalAlignment="Left" FontSize="18" Margin="347,207,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="172" Height="27"/>
        <Button Content="Login" FontSize="18" HorizontalAlignment="Left" Background="LightCyan" Margin="433,353,0,0" VerticalAlignment="Top" Width="86" Click="Button_Click"/>
        <Button Content="Cancel" FontSize="18" HorizontalAlignment="Left" Background="Pink" Margin="340,353,0,0" VerticalAlignment="Top" Width="88"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="347,261,0,0" VerticalAlignment="Top" Width="172" Height="26"/>
    </Grid>
</Window>
